<div class="main">
        <!-- Sign up form -->
  <section class="signup">
    <div class="container">
      <div class="signup-content">
        <div class="signup-form">
          <h2 class="form-title">Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"register-form", id:"register-form") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Your Name" %>
            </div>
            <div class="form-group">
              <label for="email"><i class="zmdi zmdi-email"></i></label>
              <%= f.email_field :email, autocomplete: "email", placeholder: "Your Email" %>
            </div>

            <div class="form-group">
              <label for="pass"><i class="zmdi zmdi-lock"></i></label>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
            </div>

            <div class="form-group">
              <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repeat your password" %>
            </div>
            <div class="form-group">
              <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
              <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
            </div>

            <div class="form-group form-button">
              <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
            </div>
          <% end %>
